<style lang="less">
.container {
  width: 100%;
  background: url(data:image/png;base64,);
  .pickers {
    background: rgba(255, 255, 255, 0.3);
    padding: 30rpx 16rpx;
    border-bottom: 1rpx dotted #ccc;
  }
  .pickers .tabs {
    color: #666;
    margin-left: 20rpx;
    font-size: 10pt;
    padding: 4rpx 16rpx;
    background: #eee;
    border-radius: 10rpx;
  }
  .pickers .tabs.active {
    color: #fff;
    background: #d9220e !important;
  }
  .pickers .tabs:nth-child(1) {
    margin-left: 0px;
  }
  .info{
    color:#666;
    opacity:.8;
    margin:0 auto 20rpx auto;
    font-size:12pt;
    text-align:center;
    &.loading{
      width: 70rpx;
      height: 70rpx;
    }
  }
}
</style>
<template>
  <view class="container">
    <view class="pickers">
      <repeat for="{{tab}}" >
        <text class="tabs {{chapter == item?'active':''}}" @tap="changeV({{item}})">{{item}}</text>
      </repeat>
    </view>
    <view>
    <repeat for="{{detail.objects}}" >
      <view @tap="tap({{item}})" wx:if="{{item.id}}"> 
        <list :title="item.title" :author="item.chapter" />      
      </view>
    </repeat>
    </view>
    <view class="info" wx:if="{{info}}">{{info}}</view>
    <image wx:else class="info loading" src="../assets/loading.gif"/>
  </view>
</template>
<script>
import wepy from 'wepy';
import List from '../components/poemlist';

export default class Shijing extends wepy.page {
  config = {
    navigationBarTitleText: '诗经',
    window: {
      enablePullDownRefresh: true
    }
  };
  components = {
    list: List
  };
  data = {
    detail: {
      objects: []
    },
    isLoadingMore: false,
    currentPage: 1,
    info: '',
    tab: ['国风', '周颂', '大雅', '小雅', '鲁颂'],
    chapter: '国风',
    nomore: false
  };
  methods = {
    tap(items) {
      wx.setStorage({
        key: 'shijingdata',
        data: items
      });
      wx.navigateTo({
        url: `/pages/shijingDetail?id=${items.id}` // 打开一个新的同路由页面，但指定不同的数据初始值
      });
    },
    changeV(items) {
      this.chapter = items;
      this.detail.objects = [];
      this.nomore = false;
      this.currentPage = 1;
      wx.showLoading({
        title: '加载中'
      });
      this.loadList();
    }
  };
  onLoad() {
    wx.showLoading({
      title: '加载中'
    });
    this.loadList();
  }
  onPullDownRefresh() {
    wx.stopPullDownRefresh();
  }
  onReachBottom() {
    this.currentPage++;
    if (this.nomore) {
      // 最多只能加载10页
      this.isLoadingMore = false;
      this.info = '全部已加载';
      this.$apply();
      return;
    }
    this.isLoadingMore = true;
    this.loadList();
  }
  loadList() {
    var that = this;
    wx.request({
      url: `https://www.hashimao.com/poems/shijing/?page=${
        that.currentPage
      }&chapter=${that.chapter}`,
      success: res => {
        if (res.statusCode == 200) {
          console.log();
          if (res.data.length == 0) {
            that.nomore = true;
            that.isLoadingMore = false;
            that.info = '全部已加载';
          } else {
            that.detail.objects = that.detail.objects.concat(res.data);
          }
        }
        that.$apply();
        wx.hideLoading();
      }
    });
  }
}
</script>